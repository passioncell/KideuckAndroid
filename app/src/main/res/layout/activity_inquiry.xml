<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBg">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_fix"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의사항"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_inquiry_submit"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_stroke"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:text="문의하기"/>

    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp">
        <EditText
            android:id="@+id/et_inquiry_content"
            android:padding="14dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="키득 이용중 불편하시거나 좋은 의견있으시면 \n문의사항을 보내주세요.\n적극 반영해드리겠습니다."
            android:textSize="12dp"
            android:focusable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <!-- CPC -->
        <com.fsn.cauly.CaulyAdView
            xmlns:app="http://schemas.android.com/apk/res/com.kideuck"
            android:id="@+id/xmladview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:appcode="X4ugHCy7"
            app:effect="RightSlide"
            app:bannerHeight="Proportional"
            />
    </LinearLayout>


</LinearLayout>